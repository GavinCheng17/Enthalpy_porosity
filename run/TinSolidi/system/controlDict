FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     buoyantBoussinesqPimpleFoamTemp;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         7200;

deltaT          0.0001;

writeControl    runTime;

writeInterval   25;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo         0.7;

maxDeltaT    0.05;

functions
{
    //#includeFunc residuals
    //#includeFunc streamlines
    //#includeFunc sample

    linesample
    {
        type                  sets;
        functionObjectLibs    ("libsampling.so");
        writeControl          runTime;
        writeInterval         10;


        interpolationScheme cellPoint;

        setFormat raw;

        sets
        (
            line1
            {
                type    lineUniform;
                axis    x;
                start   (0 0.00666 0);
                end     (0.0889 0.00666 0);
                nPoints 200;
            }

            line2
            {
                type    lineUniform;
                axis    x;
                start   (0 0.03329 0);
                end     (0.0889 0.03329 0);
                nPoints 200;
            }

            line3
            {
                type    lineUniform;
                axis    x;
                start   (0 0.05994 0);
                end     (0.0889 0.05994 0);
                nPoints 200;
            }
        );

        fields (T U p);
    }

    PhaseChangeFront
    {
        type                  surfaces;
        functionObjectLibs    ("libsampling.so");
        writeControl          runTime;
        writeInterval         10;


        interpolationScheme cellPoint;

        surfaceFormat raw;

        fields
        (
            f_l
        );

        surfaces
        (
            PCF
            {
                type           isoSurface; 
                isoField       f_l;
                isoValue       0.5;
                interpolate    true;

                zone           internalField;
            }
        );
    }
}

// ************************************************************************* //
