FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-8;
        relTol          0.0;//0 everthing
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|T|k|epsilon)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.0;
    }

    "(U|T|k|epsilon)Final"
    {
        $T;
        relTol          0;
    }

}

PIMPLE
{
    momentumPredictor yes;//yes
    nNonOrthogonalCorrectors 0;
    nCorrectors       2;
    nOuterCorrectors  4;//nOuterCorrectors  4; original none
    pRefCell          0;
    pRefValue         0;
}

relaxationFactors
{
    fields
    {
        //p           0.3; // commentted out
    }
    equations
    {
        U               0.8;
        T               0.7;
    }
}


